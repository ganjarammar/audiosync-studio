{
  "$schema": "../../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "PodLingo",
  "version": "1.0.6",
  "identifier": "com.podlingo.studio",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:8080",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "PodLingo",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "nsis",
    "createUpdaterArtifacts": "v1Compatible",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "log": {
      "level": "info",
      "attachConsole": true
    },
    "updater": {
      "active": true,
      "dialog": false,
      "endpoints": [
        "https://github.com/ganjarammar/audiosync-studio/releases/latest/download/latest.json"
      ],
      "pubkey": "RWRl+ofxXO8nOZrWgt9qW9SyQxeKWf5WbMDAUM+damKBKz7afMsMKrMS"
    }
  }
}